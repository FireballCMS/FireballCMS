            <Clock animated="true" autoNightMode="true" borderWidth="0.0" discreteHours="true" lcdDesign="BLUE_BLACK" lcdFont="DIGITAL" skinType="SLIM" />
        </VBox>
    </HBox>
    <Separator prefWidth="200.0" VBox.vgrow="NEVER" />
    <ListView fx:id="mNodesVideoPreviewList" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" orientation="HORIZONTAL" VBox.vgrow="SOMETIMES" />
</VBox>
