        <Label fx:id="mNodeName" styleClass="node-name" text="Node Name is very long">
            <font>
                <Font name="Alegreya" size="24.0" />
            </font>
        </Label>
    </HBox>
    <HBox alignment="CENTER">
        <AnchorPane prefHeight="200.0" prefWidth="200.0">
            <MediaView fx:id="mMediaPlayerView" cache="true" cacheHint="SPEED" fitHeight="480.0" fitWidth="640.0" styleClass="player" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <viewport>
                    <Rectangle2D />
                </viewport>
            </MediaView>
            <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                <StackPane id="media-control" styleClass="player-indicator" VBox.vgrow="NEVER">
                    <ProgressBar fx:id="mVideoProgressIndicator" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" progress="0.0" StackPane.alignment="CENTER" />
                    <Slider fx:id="mVideoProgressSlider" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" />
                </StackPane>
                <HBox id="media-controls" fx:id="mMediaControlsContainer" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                    <Label id="media-control" fx:id="mPlayButton" styleClass="play" />
                    <HBox id="media-control-group" alignment="CENTER_RIGHT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" nodeOrientation="LEFT_TO_RIGHT" HBox.hgrow="NEVER">
                        <Label id="media-control" fx:id="mGoToStartButton" styleClass="to-start" />
                        <Label id="media-control" fx:id="mRewindButton" alignment="CENTER" contentDisplay="CENTER" styleClass="rewind" />
                    </HBox>
                    <HBox id="media-control-group" alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" HBox.hgrow="NEVER">
                        <Label id="media-control" fx:id="mFastForwardButton" styleClass="fast-fwd" />
                        <Label id="media-control" fx:id="mGoToEndButton" styleClass="to-end" />
                    </HBox>
                    <Separator maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" visible="false" HBox.hgrow="ALWAYS" />
                    <HBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" HBox.hgrow="NEVER">
                        <Label id="media-control" fx:id="mVolumeIndicator" styleClass="volume" />
