<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="20.0" stylesheets="@node.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ncc490.cmpt405.views.node.NodePresenter">
    <HBox alignment="CENTER" VBox.vgrow="NEVER">
        <padding>
            <Insets bottom="10.0" top="10.0" />
