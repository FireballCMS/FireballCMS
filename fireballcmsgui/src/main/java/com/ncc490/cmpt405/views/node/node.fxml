                        <StackPane id="media-control" styleClass="volume-slider" HBox.hgrow="NEVER">
                            <ProgressBar fx:id="mVolumeProgress" maxWidth="1.7976931348623157E308" progress="0.0" />
                            <Slider fx:id="mVolumeSlider" prefHeight="16.0" prefWidth="130.0" />
                        </StackPane>
                    </HBox>
                    <Label alignment="BOTTOM_RIGHT" styleClass="maximize-vid" />
                </HBox>
            </VBox>
        </AnchorPane>
        <Separator maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" style=": 0;" valignment="TOP" HBox.hgrow="ALWAYS" />
