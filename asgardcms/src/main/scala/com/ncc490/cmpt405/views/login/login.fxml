<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
           stylesheets="@login.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
      <SplitPane dividerPositions="0.5" prefHeight="160.0" prefWidth="200.0">
         <VBox fx:id="mSignupPage" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
               prefWidth="285.0">
            <ImageView fx:id="mCreateAvatar" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true"
                       preserveRatio="true" styleClass="avatar">
               <viewport>
                  <Rectangle2D/>
               </viewport>
               <VBox.margin>
                  <Insets bottom="50.0"/>
               </VBox.margin>
            </ImageView>
            <TextField id="Login Email textField" fx:id="mCreateEmailTextfield" maxHeight="-Infinity"
                       maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" promptText="%login.email"
                       styleClass="auth-field">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
               </VBox.margin>
               <opaqueInsets>
                  <Insets/>
               </opaqueInsets>
            </TextField>
            <PasswordField id="Login PasswordTextfield" fx:id="mCreatePasswordTextfield" maxHeight="-Infinity"
                           maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                           promptText="%login.pass.prompt" styleClass="auth-field">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
               </VBox.margin>
            </PasswordField>
            <PasswordField id="Login Password Retype" fx:id="mCreatePasswordRetype" alignment="CENTER_LEFT"
                           maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                           prefHeight="33.0" prefWidth="811.0" promptText="%login.pass.reprompt"
                           styleClass="auth-field">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
               </VBox.margin>
            </PasswordField>
         </VBox>
         <VBox fx:id="mLoginPage" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity">
            <ImageView fx:id="mLoginAvatar" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true"
                       preserveRatio="true" styleClass="avatar">
               <viewport>
                  <Rectangle2D/>
               </viewport>
               <VBox.margin>
                  <Insets bottom="50.0"/>
               </VBox.margin>
            </ImageView>
            <TextField id="Login Email textField" fx:id="mLoginEmailTextfield" maxHeight="-Infinity"
                       maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                       promptText="%login.email" styleClass="auth-field">
               <opaqueInsets>
                  <Insets/>
               </opaqueInsets>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
               </VBox.margin>
            </TextField>
            <PasswordField id="Login PasswordTextfield" fx:id="mLoginPasswordTextfield" maxHeight="-Infinity"
                           maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                           promptText="%login.pass.prompt" styleClass="auth-field">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
               </VBox.margin>
            </PasswordField>
         </VBox>
      </SplitPane>
      <Button fx:id="mActionButton" alignment="CENTER" defaultButton="true" mnemonicParsing="false"
              text="%login.signup" textAlignment="CENTER" textFill="#3c2b2b">
         <VBox.margin>
            <Insets top="20.0"/>
         </VBox.margin>
      </Button>
      <ButtonBar buttonOrder="BUTTON_ORDER_WINDOWS" prefHeight="40.0" prefWidth="200.0" VBox.vgrow="SOMETIMES">
         <buttons>
            <Button id="social" fx:id="mGoogleSignIn" alignment="TOP_LEFT" mnemonicParsing="false" prefWidth="303.0"
                    styleClass="google" textAlignment="CENTER"/>
            <Separator orientation="VERTICAL" prefHeight="200.0"/>
            <Button id="social" fx:id="mTwitterSignIn" maxHeight="-Infinity" maxWidth="-Infinity"
                    mnemonicParsing="false" styleClass="twitter">
               <padding>
                  <Insets left="5.0" right="5.0"/>
               </padding>
            </Button>
         </buttons>
         <VBox.margin>
            <Insets/>
         </VBox.margin>
      </ButtonBar>
   </VBox>
</StackPane>
